.employee-detail(layout="row")
  div
    .sidebar(layout='column',  flex='stretch')
      h4 User Management
      hr      
      a(href='/employees') Manage Employees
      a(href='/organisations') Manage Organisation
      hr
      h4 List Datamanagement
      hr
      a(href='/department') Manage Department
      a(href='/designation') Manage Designation
      a(href='/leave-request') View Leave Request
      a(href='/daily-logs') View Daily Logs
      a(href='/project') Add Projects
  span(flex="")
  div(layout="column")
    h1 Employee Details 
    form.md-whiteframe-z1(name="form", ng-submit="save()", layout-padding="")
      div(layout="row", layout-align="space-around left") 
        p Name
        md-input-container
          label First Name
          input(type="text", ng-model="fName", aria-label="Fname")
        md-input-container
          label Middle Name
          input(type="text", ng-model="mName", aria-label="Mname")
        md-input-container
          label Last Name
          input(type="text", ng-model="lName", aria-label="Lname")

      div(layout="row", layout-align="space-around left") 
        p Contact
        md-input-container
          label Mobile
          input(type="number", ng-model="mNumber", aria-label="Mobile")
        md-input-container
          label Home
          input(type="number", ng-model="hNumber", aria-label="Home")
      div(layout="column", layout-align="space-around left" layout-padding="") 
        div Designation
          md-select(ng-model="designation" )
            md-option(ng-value="singleDesignation.name", ng-repeat="singleDesignation in designation") {{ singleDesignation.name }}
        div Department
          md-select(ng-model="department" )
            md-option(ng-value="")
            md-option(ng-value="singleDepartment.name", ng-repeat="singleDepartment in department") {{ singleDepartment.name }}


      div(layout="row")
        input.md-button(type="submit", value="Save")
        md-button(ng-click="reset()") Reset
        md-button(ng-href="/employees") Cancel
  span(flex="")